{% extends "PluginCallisto::PageDesign.PageDesign" %}

{% block PageBody %}

    {{ component( "PluginCallisto::Customer.Components.AddressSelect.AddressSelect" ) }}
    {{ component( "PluginCallisto::Customer.Components.AddressSelect.AddressSelectGroup" ) }}
    {{ component( "PluginCallisto::Checkout.Components.PaymentProviderSelect" ) }}
    {{ component( "PluginCallisto::Checkout.Components.ShippingProfileSelect" ) }}
    {{ component( "PluginCallisto::Basket.Components.Coupon" ) }}
    {{ component( "PluginCallisto::Basket.Components.BasketList" ) }}
    {{ component( "PluginCallisto::Basket.Components.BasketTotals" ) }}

    <div class="checkout container">
        <div class="row m-t-3">

            <div class="col-xs-12 m-b-3">
                <h1>{{ trans("PluginCallisto::Callisto.orderCheckout") }}</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <!-- ADDRESS SELECT -->
            <div class="col-md-7">
                <div id="registry-form-container" class="registry-form-container main-col" data-id="0" data-status="2">
                    {% if frontend.Account.getIsAccountLoggedIn %}
                        <address-select-group v-bind:address-list-invoice="{{ services.customer.getAddresses(1) | json_encode() }}"
                                              v-bind:selected-address-id-invoice="{{ services.checkout.getBillingAddressId() }}"
                                              v-bind:address-list-shipping="{{ services.customer.getAddresses(2) | json_encode }}"
                                              v-bind:selected-address-id-shipping="{{ services.checkout.getDeliveryAddressId() }}"></address-select-group>
                    {% else %}
                        <address-select-group v-bind:address-list-invoice=""
                                              v-bind:selected-address-id-invoice=""
                                              v-bind:address-list-shipping=""
                                              v-bind:selected-address-id-shipping=""></address-select-group>
                    {% endif %}
                    <header class="m-b-1">
                        <h3>{{ trans("PluginCallisto::Callisto.orderShippingProfile") }}</h3>
                    </header>
                    <div class="shipping-method-select">
                        <shipping-profile-select></shipping-profile-select>
                    </div>

                    <header class="m-b-1">
                        <h3>{{ trans("PluginCallisto::Callisto.orderPaymentMethod") }}</h3>
                    </header>
                    <div class="payment-method-select">
                        <payment-provider-select
                                :payment-provider-list="{{ services.checkout.getCheckoutPaymentDataList() | json_encode() }}"></payment-provider-select>
                    </div>
                </div>
            </div>
            <!-- ./ADDRESS SELECT -->

            <div class="col-md-5 checkout-rightside">
                <aside class="sidebar">
                    <div class="cmp cmp-checkout-sidebar">
                        <div class="cmp cmp-basket-preview-list">
                            <basket-list size="small"></basket-list>
                        </div>
                        <hr>
                        <coupon></coupon>
                        <hr>
                        <basket-totals :config="{{ config("PluginCallisto.basket.data")|split(', ')|json_encode() }}"></basket-totals>
                    </div>
                </aside>
            </div>
        </div>

        <!-- OPT IN -->
        <div id="container-test"> <!-- TODO remove test data -->
            Test-div
        </div>
        <iframe id="iframe-test"></iframe> <!-- TODO remove test data -->
        <div class="row">
            <div class="col-xs-12 m-b-3">
                <hr>
                <div class="row">
                    <div class="col-xs-12 col-sm-7">
                        <div class="form-check">
                            <label class="form-check-label" for="agb-accept">
                                <input class="form-check-input" type="checkbox" value="" id="agb-accept">
                                {% autoescape false %}
                                    {{ trans("PluginCallisto::Callisto.generalChooseOur") }}
                                    <a href="/agb/" target="_blank">
                                        <strong>{{ trans("PluginCallisto::Callisto.generalGtc") }}</strong>
                                    </a>,
                                    <a href="/widerrufsrecht/" target="_blank">
                                        <strong>{{ trans("PluginCallisto::Callisto.generalCancellationRight") }}</strong>
                                    </a>
                                    {{ trans("PluginCallisto::Callisto.generalAnd") }}
                                    <a href="/datenschutz/" target="_blank">
                                        <strong>{{ trans("PluginCallisto::Callisto.generalPrivacyPolicy") }}</strong>
                                    </a>
                                    {{ trans("PluginCallisto::Callisto.generalToNotice") }}
                                {% endautoescape %}
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-5">
                        <button id="placeOrder" class="btn btn-primary btn-block" type="submit"
                                v-prepare-payment
                                selector-iframe="#iframe-test"
                                selector-container="#container-test"
                                target-continue="/confirmation"> <!-- TODO remove test data -->
                            <i class="fa fa-arrow-right" aria-hidden="true"></i> {{ trans("PluginCallisto::Callisto.orderBuyNow") }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ./OPT IN -->
    </div>
{% endblock %}
